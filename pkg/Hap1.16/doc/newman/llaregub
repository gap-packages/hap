ex -c "%s/<Verb>/\\\texttt{/g"  -c "wq" "$@"

ex -c "%s/<\/Verb><P\/>/}\r/g"  -c "wq" "$@"

ex -c "%s/<\/Verb>/}\\\\\\\/g"  -c "wq" "$@"

ex -c "%s/<P\/>/\r/g"  -c "wq" "$@"

ex -c "%s/<M>/\$/g"  -c "wq" "$@"

ex -c "%s/<\/M>/\$/g"  -c "wq" "$@"

ex -c "%s/-->/\$\\\longrightarrow\$/g"  -c "wq" "$@"

ex -c "%s/<\/B>/\\}/g"  -c "wq" "$@"

ex -c "%s/<B>/\\\texttt\\{/g"  -c "wq" "$@"

