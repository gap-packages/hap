InstallGlobalFunction(StandardCocycle,
function(arg)
local 
	 R,f,n,q,Standard,Homotopy;
R:=arg[1];
f:=arg[2];
n:=arg[3];
if Length(arg)>3 then q:=arg[4]; else q:=0; fi;

#####################################################################
Homotopy:=function(w)
local ans, x;
ans:=[];

for x in w do
ans:=AddWords(ans,R.homotopy(n-1,x));
od;
return ans;
end;
#####################################################################

#####################################################################
Standard:=function(g,h,k)
local S,v,x;

S:=Homotopy(Syzygy(R,[g,h,k]));
Apply(S,x->x[1]);

v:=List([1..R.dimension(n)],x->0);

for x in S do
v[AbsoluteValue(x)]:=v[AbsoluteValue(x)] + SignInt(x);
od;

if q=0 then
return v*f;
else
return v*f mod q; fi;
end;
#####################################################################

return Standard;
end);
